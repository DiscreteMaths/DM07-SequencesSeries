  \else%
    \vskip.5ex%
    {\raggedleft\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
  \fi%
  \ifx\insertauthor\@empty%
  \else%
    \vskip1ex%
    {\raggedright\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par}%
  \fi%
  \ifx\insertinstitute\@empty%
  \else%
    \vskip.3ex%
    {\raggedright\usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute\par}%
  \fi%
