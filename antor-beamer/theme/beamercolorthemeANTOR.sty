% =========================================================================


\ifbeamer@dark%

  \setbeamercolor{structure}{fg=white}%
  \setbeamercolor{normal text}{fg=white}%
  \setbeamercolor{frametitle}{fg=white}%

\else%

  \setbeamercolor{structure}{fg=antorblue}%
  \setbeamercolor{normal text}{fg=antorblue}%
  \setbeamercolor{frametitle}{fg=antorblue}%

  \setbeamercolor{frame number in foot}{fg=white}%

  \ifbeamer@darktitle%
      \setbeamercolor{title}{fg=white}%
      \setbeamercolor{subtitle}{fg=antorgoldlight}%
  \else
      \setbeamercolor{subtitle}{fg=antorgold}%
  \fi

\fi


